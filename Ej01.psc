Algoritmo Ej01
	// Escribir un programa que pregunte al usuario su nombre, y luego lo salude.
	
	// Declaración de variables
	Definir Nombre Como Cadena;
	
	// Pedir al usuario su nombre
	Escribir  "¿Cual es tu nombre?: ";
	Leer Nombre;
	
	// Realizar el saludo
	Escribir  "¡¡Hola ", Nombre, "!!";
	
FinAlgoritmo